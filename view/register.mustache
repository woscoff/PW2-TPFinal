<div class="container my-4">

    <h2 class="mb-4">Registro</h2>
    <form action="/user/registerUsuario" method="post" enctype="multipart/form-data" class="formRegister">
        <div class="d-flex flex-column mb-4">
            <label for="full_name" class="">Nombre Completo:</label>
            <input type="text" id="full_name" name="full_name" class="form-control" required>
        </div>

        <div class="d-flex flex-column mb-4">
            <label for="birth_year" class="">Año de Nacimiento:</label>
            <input type="text" id="birth_year" name="birth_year" class="form-control" required>
        </div>

        <div class="d-flex flex-column mb-4">
            <label for="gender" class="">Sexo:</label>
            <select id="gender" name="gender" class="form-select" required>
                <option value="Masculino">Masculino</option>
                <option value="Femenino">Femenino</option>
                <option value="Prefiero no cargarlo">Prefiero no cargarlo</option>
            </select>
        </div>

        <div class="d-flex flex-column mb-4">
            <label for="country" class="">País:</label>
            <input type="text" id="country" name="country" class="form-control" required>
        </div>

        <div class="d-flex flex-column mb-4">
            <label for="city" class="">Ciudad:</label>
            <input type="text" id="city" name="city" class="form-control" required>
        </div>

        <div class="d-flex flex-column mb-4">
            <label for="email" class="">Email:</label>
            <input type="email" id="email" name="email" class="form-control" required>
        </div>

        <div class="d-flex flex-column mb-4">
            <label for="password" class="">Contraseña:</label>
            <input type="password" id="password" name="password" class="form-control" required>
        </div>

        <div class="d-flex flex-column mb-4">
            <label for="confirm_password" class="">Repetir Contraseña:</label>
            <input type="password" id="confirm_password" name="confirm_password" class="form-control" required>
        </div>

        <div class="d-flex flex-column mb-4">
            <label for="username" class="">Nombre de Usuario:</label>
            <input type="text" id="username" name="username" class="form-control" required>
        </div>

        <div class="d-flex flex-column mb-4">
            <label for="profile_picture" class="">Foto de Perfil:</label>
            <input type="file" id="profile_picture" name="profile_picture" class="form-control" required>
        </div>

        <button id="btn-login"
                class="button_sumbit btn btn-sm btn-primary btn-block"
                type="Submit">Registrarse
        </button>
    </form>
</div>

