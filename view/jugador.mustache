<div class="container my-4">
    {{#user}}
        <div class="d-flex justify-content-between mb-2 flex-column">
            <h5>Jugador: {{username}}</h5>
            <h5>Puntaje acumulado: {{points}}</h5>
            <h5>Partidas jugadas: {{partidasJugadas}}</h5>
            <h5>Partidas ganadas: {{partidasGanadas}}</h5>
        </div>
        <div class="d-flex justify-content-center">
            <a href="/juego/desafiar?user={{username}}" class="btn btn-primary">Desafiar</a>
        </div>
    {{/user}}
</div>
